# 数据库配置
DATABASE_URL="file:./dev.db"

# NextAuth 配置
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# 邮件服务配置
# 如果使用 QQ 邮箱
EMAIL_HOST="smtp.qq.com"
EMAIL_PORT="465"
EMAIL_USER="your-qq@qq.com"
EMAIL_PASS="your-email-authorization-code" # 这里填写授权码，不是邮箱密码
EMAIL_FROM="DigeDoc <your-qq@qq.com>"

# 如果使用 163 邮箱
# EMAIL_HOST="smtp.163.com"
# EMAIL_PORT="465"
# EMAIL_USER="your-email@163.com"
# EMAIL_PASS="your-email-authorization-code" # 这里填写授权码，不是邮箱密码
# EMAIL_FROM="DigeDoc <your-email@163.com>"

# 如果使用 Gmail
# EMAIL_HOST="smtp.gmail.com"
# EMAIL_PORT="465"
# EMAIL_USER="your-email@gmail.com"
# EMAIL_PASS="your-app-specific-password" # Gmail 需要使用应用专用密码
# EMAIL_FROM="DigeDoc <your-email@gmail.com>"

# 其他配置
NODE_ENV="development" 